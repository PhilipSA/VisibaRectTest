<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AppTheme"
    tools:context="com.example.visiba.visibarectest.Fragments.CameraGalleryRollFragment">

    <include layout="@layout/camera_roll_slider_header"
        android:id="@+id/cameraRollSliderHeaderLayout" />

    <GridView
        android:id="@+id/cameraRollGalleryGrid"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="20dp"
        android:verticalSpacing="4dp"
        android:horizontalSpacing="4dp"
        android:scrollingCache="true"
        android:smoothScrollbar="true"
        android:clipChildren="true"
        android:alwaysDrawnWithCache="true"
        android:numColumns="3"
        android:layout_below="@+id/cameraRollSliderHeaderLayout" />

</RelativeLayout>
